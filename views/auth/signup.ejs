<%- include('../partials/header'); -%>

<link rel="stylesheet" href="/css/auth-styles.css">
</head>
<body >
   
  <%- include('../partials/navigation', {user : user}); -%>

        <div role="main"><span id="maincontent"></span>
          <div class="my-1 my-sm-5"></div>
          <div class="row justify-content-center">
            <div class="col-xl-6 col-sm-8 ">
              <div class="card">
                <div class="card-block">
        
                  <div class="card-body">
                    <div class="loginerrors mt-1">
                    <% if (errorMessage) { %>
                        <div class="user-message user-message--error"><%= errorMessage %></div>
                    <% } %>                     </div>
                    <div class="row justify-content-md-center">
                      <div class="col-md-5">
                        <form class="mt-3" action="/signup" method="post" id="login">
        
                          <div class="form-group my-3">
                            <label for="username" class="sr-only">
                              Username
                            </label>
                            <input type="text" name="name" id="username" class="form-control" placeholder="Username"
                              autocomplete="username">
                          </div>

                          <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            <input type="email" name="email"  class="form-control"
                              placeholder="Email" autocomplete="email">
                          </div>
        
                          <div class="form-group">
                            <label for="password" class="sr-only">Password</label>
                            <input type="password" name="password" id="password" value="" class="form-control"
                              placeholder="Password" autocomplete="current-password">
                          </div>

                          <div class="form-group my-3">
                            <label for="password" class="sr-only">Confirm Password</label>
                            <input type="password" name="confirmPassword" id="cpassword" value="" class="form-control"
                              placeholder="Confirm Password" autocomplete="current-password">
                          </div>

                          <div class="rememberpass mt-3">
                            <input type="checkbox" name="rememberusername" id="rememberusername" value="1" checked="checked" />
                            <label for="rememberusername" >Remember username</label>
                          </div>
                          
                          <button type="submit" class="btn btn-outline-dark btn-block mt-4" id="loginbtn">Sign Up</button>
                        </form>
                      </div>
        
                      <div class="col-md-5">
                        <div class="forgetpass mt-3">
                          <p><a href="https://lms.iiitkottayam.ac.in/login/forgot_password.php"
                              style="text-decoration: none;">Forgotten your username or password?</a></p>
                        </div>
        
                        <div class="mt-3">
                          <p> Consider enabling cookies in your browser </p>
                          <p> Have an account ?</p>
                          <a class="btn btn-outline-dark btn-block mt-3" id="loginbtn" href="/login">Log In</a>
        
        
                        </div>
        
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        </body>
        </html>